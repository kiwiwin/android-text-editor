    <LinearLayout
        android:id="@+id/modes_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff8d8d8d"
        android:gravity="center"
        android:orientation="horizontal" />

    <!--<ScrollView-->
